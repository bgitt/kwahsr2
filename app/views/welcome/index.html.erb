<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="images/OldCapitol_0.jpg" alt="First slide">
      <div class="container">
        <div class="carousel-caption">
          <h1>ICON</h1>
          <p>See your current classes and drop any classes.</p>
          <p><%= button_to "ICON", icon_index_path, :class => "btn btn-lg btn-primary", :method => :get %></p>
        </div>
      </div>
    </div>
    <div class="item">
      <img src="images/Football.jpg" alt="Second slide">
      <div class="container">
        <div class="carousel-caption">
          <h1>ISIS</h1>
          <p>See all available classes and enroll in  classes.</p>
          <p><%= button_to "ISIS", isis_index_path, :class => "btn btn-lg btn-primary", :method => :get %></p>
        </div>
      </div>
    </div>
    <div class="item">
      <img src="images/Library.jpg" alt="Third slide">
      <div class="container">
        <div class="carousel-caption">
          <h1>Library</h1>
          <p>Search all books, see your books, and renew library books.</p>
          <p><%= button_to "Library", library_index_path, :class => "btn btn-lg btn-primary", :method => :get %></p>
        </div>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div><!-- /.carousel -->